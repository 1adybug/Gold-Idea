generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Question {
  questionId Int       @id @default(autoincrement())
  content    String
  goal       String    @default("")
  publisher  User?
  comments   Comment[]
  createTime DateTime  @default(now())
  updateTime DateTime  @default(now())
}

model User {
  userId   Int      @id @default(autoincrement())
  avator   String?
  userName String
  policeNo String
  phone    String
  question Question @relation(fields: [userId], references: [questionId])
  comment  Comment  @relation(fields: [userId], references: [commentId])
  unit     Unit?
  unitId   Int
}

model Comment {
  commentId  Int      @id @default(autoincrement())
  publisher  User?
  content    String
  questionId String
  question   Question @relation(fields: [commentId], references: [questionId])
  createTime DateTime @default(now())
  updateTime DateTime @default(now())
}

model Unit {
  unitId     Int      @id @default(autoincrement())
  unitNo     String
  unitName   String
  createTime DateTime @default(now())
  updateTime DateTime @default(now())
  user       User     @relation(fields: [unitId], references: [userId])
  userId     String
}
